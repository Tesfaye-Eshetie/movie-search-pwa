{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "airbnb-base",
    "prettier"
  ],
  "plugins": ["react", "import", "jsx-a11y", "prettier", "vite"],
  "rules": {
    "react/prop-types": 0,
    "indent": ["error", 2],
    // "linebreak-style": 1,
    "quotes": ["error", "single"],
    "prettier/prettier": "error"
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
